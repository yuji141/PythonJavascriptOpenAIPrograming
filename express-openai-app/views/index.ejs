
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>OpenAI デモアプリ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CDN（修正版） -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet" crossorigin="anonymous">
  </head>
  <body class="container py-4">
    <h1 class="mb-4">OpenAI プロンプト送信デモ</h1>

    <!-- フォームエリア -->
    <form method="POST" action="/">
      <div class="mb-3">
        <label for="prompt" class="form-label">質問を入力してください：</label>
        <textarea id="prompt" name="prompt" rows="4" class="form-control"
                  placeholder="例：富士山の高さは？"></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">送信する</button>
      </div>
    </form>

    <!-- 結果表示 -->
    <% if (question != undefined) { %>
      <div class="card mt-5">
        <div class="card-header">
          あなたの入力
        </div>
        <div class="card-body">
          <p class="card-text"><%= question %></p>
        </div>
      </div>
    <% } %>

    <% if (result != undefined) { %>
      <div class="card mt-3">
        <div class="card-header">
          OpenAI の返答
        </div>
        <div class="card-body">
          <p class="card-text"><%= result %></p>
        </div>
      </div>
    <% } %>

  </body>
</html>
