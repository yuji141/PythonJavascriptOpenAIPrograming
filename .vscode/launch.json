{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current File", // 開いているファイルを実行
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}", // ★ 現在開いているファイルを対象にする
      "cwd": "${workspaceFolder}" // カレントディレクトリをプロジェクトルートに
    }
  ]
}
